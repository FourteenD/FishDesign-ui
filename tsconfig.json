{
  "compilerOptions": {
    "baseUrl": ".",
    "target": "es5",
    "module": "esnext",
    "esModuleInterop": true,
    "noImplicitAny": false,
    // 严格模式
    "strict": true,

    "jsx": "preserve",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "declaration": true,
    "suppressImplicitAnyIndexErrors": true,
    "skipLibCheck": true
  },
  "include": [
    "packages/**/*.ts",
    "packages/**/*.tsx",
    "packages/**/*.vue",
    "example/**/*.ts",
    "example/**/*.tsx",
    "example/**/*.vue",
    "tools/**/*.ts",
    "tools/**/*.tsx",
    "typings/**/*.ts"
  ],
  "exclude": ["node_modules", "@type/**/*.d.ts"]
}
